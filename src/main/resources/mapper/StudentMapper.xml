<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangyang.mapper.StudentMapper">
    <select id="selectAll" resultType="Student">
        SELECT stu_num,stu_name FROM stu_inf
    </select>
    <update id="updateById">
        UPDATE stu_inf set stu_name = #{stuName} WHERE stu_num = #{stuNum}
    </update>
    <delete id="deleteAll">
        truncate stu_inf
    </delete>
    <insert id="insertMany">
        INSERT INTO stu_inf(stu_num,stu_name) VALUES
        <foreach collection="list" item="stu" separator=",">
            (#{stu.stuNum},#{stu.stuName})
        </foreach>
    </insert>
</mapper>