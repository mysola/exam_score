<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangyang.mapper.ExamMapper">

    <select id="selectAll" resultType="Exam">
        SELECT * FROM exam_inf ORDER BY exam_date
    </select>
    <delete id="deleteById">
        DELETE FROM exam_inf WHERE id = #{id}
    </delete>
    <delete id="deleteAll">
        truncate exam_inf
    </delete>
    <insert id="insertOne" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO exam_inf(exam_date,exam_name) VALUES(#{examDate,jdbcType=DATE},#{examName})
    </insert>
</mapper>